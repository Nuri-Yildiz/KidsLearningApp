<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ColorActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="402dp"
        android:layout_height="601dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#2E2D2D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button19"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="@color/black"
            android:text="Siyah"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button18"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="25px"
            android:backgroundTint="@color/black"
            android:onClick="goToBlack"
            android:text="Siyah"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/button17"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:onClick="goToBlue"
            android:text="Mavi"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button16"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="@color/white"
            android:onClick="goToWhite"
            android:text="Beyaz"
            android:textColor="#040000"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button15"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:onClick="goToGreen"
            android:text="Yeşil"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button14"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:onClick="goToRed"
            android:text="Kırmızı"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button13"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="#FFFF00"
            android:onClick="goToYellow"
            android:text="Sarı"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>