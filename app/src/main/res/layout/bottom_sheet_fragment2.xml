<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl"
        android:layout_width="411dp"
        android:layout_height="439dp"
        android:layout_margin="2dp"
        android:background="#A68F17">

        <ImageView
            android:id="@+id/bfImage3"
            android:layout_width="138dp"
            android:layout_height="127dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/photo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/bfText3"
            android:layout_width="232dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:fontFamily="casual"
            android:text="Deneme Text'i"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bfVoiceButton2" />

        <ImageView
            android:id="@+id/bfImage2"
            android:layout_width="138dp"
            android:layout_height="127dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/photo"
            app:layout_constraintBottom_toTopOf="@+id/bfImage3"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/bfVoiceButton2"
            android:layout_width="188dp"
            android:layout_height="43dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:text="Ses Dinle"
            app:icon="@drawable/ic_baseline_record_voice_over_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bfText2" />

        <Button
            android:id="@+id/bfVoiceButton3"
            android:layout_width="188dp"
            android:layout_height="43dp"

            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="Ses Dinle"
            app:icon="@drawable/ic_baseline_record_voice_over_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bfImage3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bfText3"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/bfText2"
            android:layout_width="232dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:fontFamily="casual"
            android:text="Deneme Text'i"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bfVoiceButton" />

        <ImageView
            android:id="@+id/bfImage"
            android:layout_width="138dp"
            android:layout_height="127dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/photo"
            app:layout_constraintBottom_toTopOf="@+id/bfImage2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/bfText"
            android:layout_width="232dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="casual"
            android:text="1 adet kalem"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bfVoiceButton"
            android:layout_width="188dp"
            android:layout_height="43dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Ses Dinle"
            app:icon="@drawable/ic_baseline_record_voice_over_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bfText" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>